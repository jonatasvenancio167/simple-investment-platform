.container.py-4
  nav.mb-3[aria-label="breadcrumb"]
    .d-flex.justify-content-between.align-items-center
      ol.breadcrumb
        li.breadcrumb-item = link_to "Dashboard", root_path
        li.breadcrumb-item = link_to "Investimentos", investments_path
        li.breadcrumb-item.active aria-current="page" Detalhes do Investimento
      = render "shared/back_to_previous_button"

  .card.shadow-sm.border-0.rounded-4.mb-4
    .card-header.bg-transparent.d-flex.justify-content-end
      = link_to "Editar", edit_investment_path(@investment), class: "btn btn-outline-primary"
    .card-body
      .row
        .col-md-6.mb-3
          p.mb-1.text-muted.small Usu√°rio
          h6.mb-0.text-dark = link_to @investment.user.name, user_path(@investment.user)
        .col-md-6.mb-3
          p.mb-1.text-muted.small Oferta
          h6.mb-0.text-dark = link_to @investment.fundraise.title, fundraise_path(@investment.fundraise)

      .row.mt-3
        .col-md-6.mb-3
          p.mb-1.text-muted.small Valor
          h4.mb-0.text-success.fw-bold
            i.bi.bi-currency-dollar.me-1
            = currency_br(@investment.amount)
        .col-md-6.mb-3
          p.mb-1.text-muted.small Criado em
          h6.mb-0.text-dark = l(@investment.created_at, format: :long)