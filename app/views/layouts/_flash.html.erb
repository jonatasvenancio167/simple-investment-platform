<div class="position-fixed top-0 start-50 translate-middle-x mt-3" style="z-index: 1080; min-width: 320px;">
  <% flash.each do |type, message| %>
    <% next if message.blank? %>
    <% messages = Array(message) %>
    <% bootstrap_class = case type.to_s
      when 'notice' then 'success'
      when 'alert', 'error' then 'danger'
      when 'warning' then 'warning'
      else 'info'
    end %>
    <% messages.each do |msg| %>
      <div class="alert alert-<%= bootstrap_class %> alert-dismissible fade show shadow" role="alert">
        <%= msg %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% end %>
  <% end %>
</div>